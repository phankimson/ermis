    </tr>
    <tr class="sv-content">
    <td class="row-label"><label>{{ antl.get('marial_goods.warranty_period') }}</label></td>
    <td class="row-height">
        <select class="droplist large" data-position="6" data-hidden="true"  name="warranty_period">
