            <option value="1">{{ antl.get('marial_goods.material_goods') }}</option>
            <option value="2">{{ antl.get('marial_goods.finished') }}</option>
            <option value="3">{{ antl.get('marial_goods.service') }}</option>
        </select>
    </td>
    <td class="row-space"></td>
    <td class="row-label"><label>{{ antl.get('global.code') }}</label></td>
