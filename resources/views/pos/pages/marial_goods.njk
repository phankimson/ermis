    </tr>
    <tr class="sv-content">
      <td class="row-label"><label>{{ antl.get('marial_goods.size') }}</label></td>
      <td class="row-height">
      <select class="multiselect large" multiple="multiple" data-placeholder="--Select--" data-position="6" data-hidden="true" name="size">
          {% for x in size %}
          <option value="{{ x.id }}">{{ x.code }} - {{x.name}}</option>
          {% endfor %}
